{
    "manifest_version": 3,
    "name": "Service Central Chat Alert",
    "version": "1.0",
    "description": "Plays a sound alert when someone joins the Service Central chat and focuses the chat tab",
    "icons": {
        "48": "icons/serviceCentral-48.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://hormel.saasit.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://hormel.saasit.com/*"
            ],
            "js": [
                "main.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "sounds/new-chat2.mp3",
                "sounds/notification.mp3",
                "sounds/droplet.mp3",
                "sounds/doorbell.mp3",
                "sounds/ping.mp3",
                "sounds.json"
            ],
            "matches": [
                "*://hormel.saasit.com/*"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "worker.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }    
}
